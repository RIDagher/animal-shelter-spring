<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/css" href="main.css"?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"

            stylesheets="@../styles/volunteer.css"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.animalshelter.controller.VolunteerController"
            prefHeight="400.0" prefWidth="600.0">

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Add New Volunteer"/>
            <TextField fx:id="nameField" promptText="Full Name"/>
            <TextField fx:id="emailField" promptText="Email"/>
            <TextField fx:id="phoneField" promptText="Phone"/>
            <HBox spacing="10">
                <Button fx:id="addVolunteerButton" text="Add Volunteer"/>
                <Button fx:id="searchVolunteerButton" text="Search"/>
                <Button fx:id="resetButton" text="Reset"/>
            </HBox>

            <Separator/>
            <Label text="Volunteer List:"/>
            <ListView fx:id="volunteerList" prefWidth="600" prefHeight="400"/>
        </VBox>
    </center>

</BorderPane>